@{
}
@using MyFreeFormForm.Models;
@model MyFreeFormForm.Models.FormNotes

<!-- this is a list of notes for the given form-->
<div id="formNotes">
    <div id="formNotesList">
        <ul>
            @foreach (var note in Model.Notes)
            {
                <li>@note</li>
            }
        </ul>
    </div>
    <div id="formNotesInput">
        <input type="text" id="formNoteInput" class="form-control" />
        <button id="addFormNoteBtn" class="btn btn-primary">Add Note</button>
    </div>
</div>