@page
@model MyFreeFormForm.Views.Search.StatisticsModel

@{
    ViewBag.Title = "Form Statistics";
}

<h2>Form Statistics</h2>

@if (Model.ViewModel.Statistics.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Form Name</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stat in Model.ViewModel.Statistics)
            {
                <tr>
                    <td>@stat.FormName</td>
                    <td>@stat.Count</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No statistics available.</p>
}